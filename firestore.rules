/**
 * @fileOverview Firestore Security Rules for the multi-category info app.
 *
 * Core Philosophy:
 * This ruleset allows public read access to all data while restricting
 * write access to authenticated users, who are considered administrators.
 * This is a common pattern for apps with public content managed by admins.
 *
 * Data Structure:
 * Data is now stored in separate collections per category:
 * - /institutions/{bankId}
 * - /universidades/{universityId}
 * - /hospitales/{hospitalId}
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants public read, admin write to financial institutions.
     */
    match /institutions/{institutionId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Grants public read, admin write to universities.
     */
    match /universidades/{universityId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Grants public read, admin write to hospitals.
     */
    match /hospitales/{hospitalId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
